https://udomain.dl.sourceforge.net/project/bochs/bochs/2.6.8/bochs-2.6.8.tar.gz
 tar -zxvf bochs-version

mkdir bochs
cd bochs-version

./configure --prefix=/home/liyao/Desktop/bochs --enable-debugger --enable-disasm --enable-iodebug --enable-x86-debugger --with-x --with- LDFLAGS='-pthread'

make 
make install

